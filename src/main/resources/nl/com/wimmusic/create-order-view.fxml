            <TextField fx:id="phoneNumberField" promptText="Phone number" GridPane.columnIndex="1"
                       GridPane.rowIndex="3"/>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </GridPane>
    <Label layoutX="25.0" layoutY="119.0" text="Products">
        <font>
            <Font size="26.0"/>
        </font>
    </Label>
    <TableView fx:id="productTableView" layoutX="21.0" layoutY="204.0" prefHeight="259.0" prefWidth="714.0">
        <columns>
            <TableColumn text="Quantity" prefWidth="89.0">
                <cellValueFactory>
                    <PropertyValueFactory property="quantity"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Name" prefWidth="311.0">
                <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Category" prefWidth="212.0">
                <cellValueFactory>
                    <PropertyValueFactory property="type"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Price (â‚¬)" prefWidth="85.0">
                <cellValueFactory>
                    <PropertyValueFactory property="price"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Button layoutX="36.0" layoutY="474.0" mnemonicParsing="false" onAction="#onAddProductButtonClick" prefHeight="25.0"
            prefWidth="101.0" text="Add product"/>
    <Button layoutX="173.0" layoutY="474.0" mnemonicParsing="false" onAction="#onDeleteProductButtonClick"
            prefHeight="25.0" prefWidth="101.0" text="Delete product"/>
    <Button layoutX="299.0" layoutY="474.0" mnemonicParsing="false" onAction="#onCreateOrderButtonClick"
            prefHeight="25.0" prefWidth="109.0" text="Create order"/>
