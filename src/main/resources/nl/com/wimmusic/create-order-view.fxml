<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="530.0" prefWidth="755.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label layoutX="24.0" layoutY="22.0" text="Create Order">
            <font>
                <Font size="26.0" />
            </font>
        </Label>
        <Label layoutX="24.0" layoutY="69.0" text="Customer Information">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <GridPane layoutX="391.0" layoutY="14.0" prefHeight="160.0" prefWidth="350.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="110.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="220.0" minWidth="10.0" prefWidth="220.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="51.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="51.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="51.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="51.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="First name:" />
                <Label text="Last name: " GridPane.rowIndex="1" />
                <Label text="E-mail address" GridPane.rowIndex="2" />
                <Label text="Phone number" GridPane.rowIndex="3" />
                <TextField fx:id="firstNameField" promptText="First name" GridPane.columnIndex="1" />
                <TextField fx:id="lastNameField" promptText="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="emailLabelField" promptText="E-mail address" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="phoneNumberField" promptText="Phone number" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </GridPane>
        <Label layoutX="25.0" layoutY="119.0" text="Products">
            <font>
                <Font size="26.0" />
            </font>
        </Label>
        <TableView fx:id="productTableView" layoutX="24.0" layoutY="204.0" prefHeight="258.0" prefWidth="712.0">
            <columns>
                <TableColumn prefWidth="89.0" text="Quantity" />
                <TableColumn prefWidth="311.0" text="Name" />
                <TableColumn prefWidth="212.0" text="Category" />
                <TableColumn prefWidth="85.0" text="Price" />
            </columns>
        </TableView>
      <Button onAction="onAddProductButtonClick" layoutX="36.0" layoutY="474.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="101.0" text="Add product" />
      <Button onAction="onDeleteProductButtonClick" layoutX="173.0" layoutY="474.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="101.0" text="Delete product" />
      <Button onAction="onCreateOrderButtonClick" layoutX="299.0" layoutY="474.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="109.0" text="Create order" />
      <Label fx:id="errorTextBoxLabel" layoutX="400.0" layoutY="174.0" prefHeight="17.0" prefWidth="333.0" text="Please fill in all the textboxes!" textFill="RED" visible="false" />
    </children>
</AnchorPane>
